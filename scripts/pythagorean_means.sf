#!/usr/bin/perl

# Translation of: http://rosettacode.org/wiki/Averages/Pythagorean_means#Perl

func A (a) {
    a.sum / (a.len);
}

func G (a) {
    var p = (a.prod);
    p.root(a.len);
}

func H (a) {
    var h = 0;
    a.for {h+=(1/_)};
    a.len / h;
}

var ints = (1..10);

var a = (A(ints));
var g = (G(ints));
var h = (H(ints));

[
    ["A" => a],
    ["G" => g],
    ["H" => h],
].for {
    "%s=%s\n".printf(_...)
}
