#!/usr/bin/ruby

# Translation of: http://rosettacode.org/wiki/Averages/Pythagorean_means#Perl

func A(a) {
    a.sum / (a.len);
}

func G(a) {
    a.prod.root(a.len);
}

func H(a) {
    a.len / (a.map{|n|1/n}.sum);
}

var ints = (1..10);

var a = (A(ints));
var g = (G(ints));
var h = (H(ints));

[
    ["A" => a],
    ["G" => g],
    ["H" => h],
].for {
    "%s=%s\n".printf(_...)
}
