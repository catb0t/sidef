#!/usr/bin/ruby

#
## http://rosettacode.org/wiki/Exceptions/Catch_an_exception_thrown_in_a_nested_call
#

func baz(i) { die "U#{i}" };
func bar(i) { baz(i)      };
 
func foo {
    [0, 1].each { |i|
        try   { bar(i) }
        catch { |_, msg|
            msg ~~ /^U0/ ? say "Function foo() caught exception U0"
                         : die msg;       # re-raise the exception
        };
    }
}
 
foo();
