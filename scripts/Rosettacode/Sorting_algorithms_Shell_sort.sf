#!/usr/bin/ruby

#
## http://rosettacode.org/wiki/Sorting_algorithms/Shell_sort
#

func shell_sort(a) {
    var h = a.len;
    while (h = (h / 2 int)) {
        h .. a.offset -> each { |i|
            var k = a[i];
            for (var j = i; (j >= h) && (k < a[j - h]); j -= h) {
                a[j] = a[j - h];
            };
            a[j] = k;
        }
    };
    return a;
}
