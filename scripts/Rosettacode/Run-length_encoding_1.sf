func decode(str) {
     var chars = str.chars;
     var r = '';
     0 .. (chars.len/2 - 1 -> int) each { |i|
         r += (chars[2*i + 1] * str[2*i].ord);
     };
     return r;
};

var str = 'WWWWWWWWWWWWBWWWWWWWWWWWWBBBWWWWWWWWWWWWWWWWWWWWWWWWBWWWWWWWWWWWWWW';

var enc = encode(str);
var dec = decode(enc);

say enc.dump;
say dec;
