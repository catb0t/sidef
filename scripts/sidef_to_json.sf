#!/usr/bin/ruby

# Sidef to JSON conversion

String.def_method('to_json', func (self) {
    '"' + self.trans(['"',  '\\',   "\b", "\f", "\n", "\r", "\t"]
                  => ['\"', '\\\\', '\b', '\f', '\n', '\r', '\t']) + '"'
});

Array.def_method('to_json', func (self) {
    '[ ' + self.map{.to_json}.join(', ') +' ]'
});

Hash.def_method('to_json', func (self) {
    '{ ' + self.pairs.map { .first.to_json + ' : ' + .second.to_json }.join(', ') + ' }'
});

Pair.def_method('to_json', func (self) {
    self.to_hash.to_json
});

Sidef.def_method('to_json', func (self) {
    self.is_defined ? (self.respond_to('dump') ? self.dump : return) : 'null';
});

# Sidef structure
var hash = Hash.new(
    'test'  => ["one", 2, 'three'],
    'hello' => Hash.new(
                 'bool'  => true,
                 'null'  => nil,
                 'array' => [["\t"]],
               ),
    'pair'  => Pair.new('first', 'second'),
);

say '==> Sidef';
say hash.dump;

say "\n==> JSON";
say hash.to_json;
