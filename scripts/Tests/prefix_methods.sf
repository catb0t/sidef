#!/usr/bin/ruby

# Tests for prefix methods

var i = int(12.5);

assert_eq(i, 12);
assert_eq(lc("TeSt"), "test");
assert_eq(ceil(12.1.add(2)), 15);

var int = 42;
assert_eq(int, 42);
assert_eq(::int(12.5), 12);         # `::` solves the ambiguity

var x = 25;
::sqrt!(x);          # sqrt(x) in-place
assert_eq(x, 5);

say "** Test passed!";
