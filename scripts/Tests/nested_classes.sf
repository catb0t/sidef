
do {
    class ArgParse () {

      class Option (long, bar=99) < ArgParse {
        method foo {
            self.bar
        }
      }

      has bar = 42

      method option(name) {
          Option(name)
      }
    }

    var opt = ArgParse().option(:f)

    assert_eq(opt.foo, 99)
    assert_eq(opt.bar, 99)
}

