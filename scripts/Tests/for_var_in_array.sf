#!/usr/bin/ruby

var arr = [1,2,3,4];

for i in arr {
    next if i==2;
    if (i == 2) {
        die "next error!";
    }
}

var i = 42;
assert_eq(i, 42);

for i in arr {
    break if i==2;
    if (i >= 2) {
        die "break error!";
    }
}

assert_eq(i, 42);
i = 99;

for i in arr {
    say i;
}

assert_eq(i, 99);

for c in "string" {
    say "<#{c}>"
}

for i,k in Hash(a => 1, b => 2) {
    say "<#{i}> <#{k}>";
}

for i,j,k in [
    %w(a b d),
    %w(e f g),
] {
    say "<#{i}> <#{j}> <#{k}>"
}

assert_eq(i, 99)
