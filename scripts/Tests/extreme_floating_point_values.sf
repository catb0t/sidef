#!/usr/bin/ruby

assert_eq(      1.0 / 0.0 , Inf)
assert_eq(     -1.0 / 0.0 , -Inf)
assert_eq(      0.0 / 0.0 , NaN)
assert_eq(          - 0.0 , 0)          # should be -0.0
assert_eq(        Inf + 1 , Inf)
assert_eq(        5 - Inf , -Inf)
assert_eq(        Inf * 5 , Inf)
assert_eq(        Inf / 5 , Inf)
assert_eq(        Inf * 0 , NaN)
assert_eq(      1.0 / Inf , 0)
assert_eq(     -1.0 / Inf , 0)          # should be -0.0
assert_eq(   -Inf == -1/0 , true)
assert_eq(      -Inf * 0  , NaN)
assert_eq(       0 * -Inf , NaN)
assert_eq(       0 * 1/0  , NaN)
assert_eq(     0/0 == 0/0 , true)
assert_eq(      Inf + Inf , Inf)
assert_eq(      Inf - Inf , NaN)
assert_eq(      Inf * Inf , Inf)
assert_eq(      Inf / Inf , NaN)
assert_eq(      Inf * 0.0 , NaN)
assert_eq(        0 < Inf , true)
assert_eq(     Inf == Inf , true)
assert_eq(   -Inf == -Inf , true)
assert_eq(   -Inf <=> Inf , -1)
assert_eq(   Inf <=> -Inf ,  1)
assert_eq(    Inf <=> Inf ,  0)
assert_eq(  -Inf <=> -Inf ,  0)
assert_eq(     0 <=> -Inf ,  1)
assert_eq(        NaN + 1 , NaN)
assert_eq(        NaN * 5 , NaN)
assert_eq(      NaN - NaN , NaN)
assert_eq(      NaN * Inf , NaN)
assert_eq(          - NaN , NaN)
assert_eq(     NaN == NaN , true)
assert_eq(        NaN > 0 , false)
assert_eq(        NaN < 0 , false)
assert_eq(       NaN == 0 , false)
assert_eq(    0.0 == -0.0 , true)

say "** Test passed!";
