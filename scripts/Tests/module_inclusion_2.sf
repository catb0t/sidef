#!/usr/bin/ruby

#
## Module inclusion
#
module Foo {
    var hi = 42
}

module Baz {
    include Foo
    import Foo::hi
    var hello = 100
    assert_eq(hi, 42)
}

module Qux {
    include Baz
    assert_eq(Baz::hi, 42)
    assert_eq(Baz::hello, 100)
}

module Baz {
    assert_eq(hi, 42)
    assert_eq(hello, 100)
}

module Bar {
    include Baz
    assert_eq(Baz::hi, 42)
    assert_eq(Baz::hello, 100)
}

module ZZZ {

}

module ABC {
    include ZZZ
    include Baz
    assert_eq(Baz::hi, 42)
    assert_eq(Baz::hello, 100)
}

module ABC {
    include Baz                 # TODO: make this inclusion optional
    assert_eq(Baz::hi, 42)
}

say "** Test passed!"
