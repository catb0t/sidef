#!/usr/bin/ruby

#
## Test array and hash lookups
#

var a = %w(a b c d e f)

var h = Hash(
    a => 1,
    b => 2,
    c => 3,
    d => 4,
)

assert_eq(a[0], 'a')
assert_eq(a[3], 'd')
assert_eq(a[-1], 'f')

assert_eq(h{:a}, 1)
assert_eq(h{:c}, 3)
assert_eq(h{:d}, 4)


class Foo(k,i) {
    method to_s {
        k
    }
    method to_n {
        i
    }
}

var f = Foo("c", 3)
var g = Foo("b", 2)

assert_eq(a[f], 'd')
assert_eq(h{f}, 3)

assert_eq([a[f,g,f]], ['d','c','d'])
assert_eq([h{f,g,f}], [3,2,3])

g.k = 'a'

assert_eq(h{g}, 1)
assert_eq(h{f}, 3)

g.i = -1

assert_eq(a[g], 'f')
assert_eq(a[f], 'd')

say "** Test passed!"
