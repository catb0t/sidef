#!/usr/bin/ruby

# Equality and comparison tests for arrays that contain cyclic references.

var x = [1,2,3]
var y = [1,2,3]

x[3] = x
y[3] = x

assert_eq(x == y, true)
assert_eq(y == x, true)

assert_eq(x <=> y, 0)
assert_eq(y <=> x, 0)

y[0] = 42

assert_eq(x == y, false)
assert_eq(y == x, false)
assert_eq(x <=> y, -1)
assert_eq(y <=> x, 1)

y[0] = 0

assert_eq(x == y, false)
assert_eq(y == x, false)
assert_eq(x <=> y, 1)
assert_eq(y <=> x, -1)

x[0] = 0

assert_eq(x == y, true)
assert_eq(x <=> y, 0)
assert_eq(y <=> x, 0)

x[1] = y
y[1] = y

assert_eq(x == y, true)
assert_eq(x <=> y, 0)
assert_eq(y <=> x, 0)

x[2] = x

assert_eq(x == y, false)
assert_ne(x <=> y, 0)

y[2] = x

assert_eq(x == y, true)
assert_eq(x <=> y, 0)
assert_eq(y <=> x, 0)

do {
    var x = Hash(a => 1, b => 2)
    x{:c} = x

    var z = Hash(a => 1, b => 2)
    z{:c} = z

    assert_eq(x, x)
    assert_eq(z, z)
    assert_ne(z, x)
    assert_ne(x, z)

    assert_eq(z{:c}, z)
    assert_eq(x, x{:c})

    assert_ne(x{:c}, z)

    assert_ne(x, Hash(a => 1, b => 2))
    assert_ne(Hash(a => 1, b => 2), x)
}

do {
    var x = [1,2,3]
    x[1] = x

    var y = [1,2,3]
    y[1] = y

    assert_eq(x, x)
    assert_ne(x, y)
    assert_ne(y, x)

    assert_eq(x[1], x)
    assert_eq(y, y[1])

    assert_ne(y[1], x)
    assert_ne(y, x[1])

    assert_ne(x, [1,2,3])
    assert_ne([1,2,3], y)
}

say "** Test passed!"
