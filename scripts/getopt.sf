#!/usr/bin/perl

#
## Can be executed as: sidef getopt.sf -d -e "hello"
#

var getopt = (
           try   { require 'Getopt::Std' -> () }
           catch { warn("** Getopt::Std is not installed!"); return }
);

var hash = Hash.new;
getopt.getopts('de:', \hash);

if (hash.exists('e')) {
    Str.new(hash['e']).say;            # the value of '-e'
}

var d_bool = Bool.new(hash['d']);

if (d_bool) {
    "-d has been specified!".say;
}
