#!/usr/bin/ruby

#
## Doesn't change the last value of a variable,
## when fewer arguments are specified in a function call.
#

func recurse (i, greeting) {

    greeting.say;

    (i-- >= 2) && (recurse(i, "Hello Sidef!")) ||   # when i  > 4, print "Hello Sidef"
    (i >= 0   && (recurse(i, "Hello to me!")));     # when i >= 0, change the greeting var, and recurse with one argument
};

recurse(5, "Hello world!");
