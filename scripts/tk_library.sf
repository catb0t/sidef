#!/usr/bin/ruby

# http://rosettacode.org/wiki/Hello_world/Graphical

var tk = (
            try   { require 'Tk' }
            catch { STDERR.print("** Module 'Tk' is not installed!\n"); return }
         );

var main = 'MainWindow'.to_caller.new;
main.Button(
    '-text'    => 'Goodbye, World!',
    '-command' => 'exit',
).pack;
tk.MainLoop;
