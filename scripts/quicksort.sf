#!/usr/bin/ruby

func quicksort (a) {
    a.len < 2 && return(a);
    var p = a.pop_rand;          # to avoid the worst cases
    __FUNC__(a.grep{ .< p}) + [p] + __FUNC__(a.grep{ .>= p});
}

var numbers = (0..10 -> shuffle);
say quicksort(numbers);

var strs = %w(John Kate Zerg Alice Joe Jane).shuffle;
say quicksort(strs);
