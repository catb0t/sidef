#!/usr/bin/ruby

# Translation of: http://rosettacode.org/wiki/Combinations#Perl5i

func combine(n, set) {

    set.len == 0 && (
        return [];
    );

    n == 1 && (
        return(set.map{[_]});
    );

    head   = (set.shift);
    result = (combine(n-1, set.copy));

    result.each { |subarray|
        subarray.unshift(head);
    }

    return(result + (combine(n, set)));
}


##
# Testing
##

combine(3, 'a'..'e').each { |arr|
    arr.join(' ').say;
}
