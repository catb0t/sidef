#!/usr/bin/ruby

#
## Numbered captures (array)
#

var regex = /^(\d+) (\w+) (\d+)$/;
var reg = ('26 Iunie 2013' =~ regex);

if (reg.matched) {
    "Got '%d' captures\n".printf(reg.cap.len);
    reg.cap.join("--").say;
}
else {
    "Regex_1 fail!\n".die
}


#
## Named captures (hash)
#

var cap = ("12 John Wall Street no. 4" =~ /(?<id>\d+)\s+(?<name>\S+)\s+(?<address>(.+))$/);

cap.matched
    || "Named captures failed!\n".die;

var hash = cap.ncap;
[hash["name"], hash["address"]]
    == ['John', 'Wall Street no. 4']
        || "ncap error".die;

