#!/usr/bin/ruby

class Math_Algebra_Matrix(matrix) {

    static VERSION = 0.1;

    #
    ## Require a Perl module
    #

    static req = (
            try   { require 'Math::Matrix' }
            catch { Sys.die("** Math::Matrix is not installed!\n"); }
    );

    #
    ## Function declaration
    #

    method det {

        var math_matrix = (
            req.new(self.matrix->to_list);
        );

        Num.new(math_matrix.determinant);
    }
}
