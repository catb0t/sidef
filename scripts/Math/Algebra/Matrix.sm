#!/usr/bin/ruby

static VERSION = 0.1;

class new(matrix) {

    #
    ## Require a Perl module
    #

    static req = (
            try   { require 'Math::Matrix' }
            catch { Sys.die("** Math::Matrix is not installed!\n"); }
    );

    #
    ## Function declaration
    #

    method det {

        var math_matrix = (
            req.new(self.matrix...);
        );

        math_matrix.determinant;
    }
}
