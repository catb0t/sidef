#!/usr/bin/ruby

class Math::Algebra::Matrix;

var VERSION = 0.1;

#
## Require a Perl module
#

var req = (
           try   { require 'Math::Matrix' }
           catch { Sys.warn("** Math::Matrix is not installed!\n"); return }
);

#
## Function declaration
#

func det (arr) {

    var matrix = (
        req.new(arr->to_list);
    );

    Num.new(matrix.determinant);
}
