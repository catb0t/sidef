#!/usr/bin/ruby

# Static and constant initialization

var counter = 0;

func test(type){
    say "#{type} call";
    if ((counter += 1) > 2) {
        "ERROR!".die;
    };
    return "...";
}

func init() {
    static a = test('static');  # called only once
    const  b = test('const');   # =//=

    b := test("const :=");      # never gets called
    a := test("static :=");     # =//=

    say "#{a} #{b}";
}

init();
init();

say "Test passed!";
