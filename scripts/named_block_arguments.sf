#!/usr/bin/ruby

var arr = (1..10.map{10.rand.int});
var arc = (arr.map{|i|i});

arr.sort { |a,b| b <=> a} == (
arr.sort { _[1] <=> _[0] }
) || ("sort error".die);

arr.grep {|n| n > 3} == (
arr.grep { _ > 3 }
) || ("grep error".die);

arr.map {|x| x + 3} == (
arr.map { _ + 3}
) || ("map error".die);

{
   |x,y|
    x+y
}.call(10,32) == 42
    || ("block error".die);

arc == arr
    || ("arr modified in place".die);

"Test passed!".say;
