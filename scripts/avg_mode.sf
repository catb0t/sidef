#!/usr/bin/perl

# Translation of: http://rosettacode.org/wiki/Averages/Mode#Perl

func mode(array) {
    var c = Hash.new;

    for (array) { |e|
        c[e] := 0 ++;
    }

    var best = (c.values.max);
    c.keys.grep{c[_] == best};
}

for [
        [1, 3, 6, 6, 6, 6, 7, 7, 12, 12, 17],
        [1, 1, 2, 4, 4],
    ]
{ |array|
    println(mode(array).join(' '));
}
