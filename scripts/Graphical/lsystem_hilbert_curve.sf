#!/usr/bin/ruby

include('LSystem/LSystem.sf')

var rules = Hash(
    a => '-bF+aFa+Fb-',
    b => '+aF-bFb-Fa+',
);

var lsys = LSystem(
    width:  600,
    height: 600,

    scale: 1,
    xoff: -50,
    yoff: -50,

    len:   8,
    angle: 90,
    color: 'dark green',
)

lsys.execute('a', 6, "plant_1.png", rules);
