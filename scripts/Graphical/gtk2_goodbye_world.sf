#!/usr/bin/ruby

#
## http://rosettacode.org/wiki/Hello_world/Graphical#Sidef
#

Perl.eval('use Gtk2 qw(-init)');   # special import

var gtk2   = %s'Gtk2';
var window = %s'Gtk2::Window'.new;
var label  = %s'Gtk2::Label'.new('Goodbye, World!');

window.set_title('Goodbye, World!');
window.signal_connect(destroy => { gtk2.main_quit });

window.add(label);
window.show_all;

gtk2.main;
