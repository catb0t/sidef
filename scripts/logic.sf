#!/usr/bin/ruby

(true  ? "x" : "y")->say;               # prints "x"
(false ? "x" : "y")->say;               # prints "y"

''say;

(false || (false) || (true))->to_s->say;    # prints "true"
(false || "hello") -> say;                  # prints "hello"
(false || false || "world") say;            # prints "world"
(false || false || false) -> to_s->say;     # prints "false"
(true  && true && "linux") say;             # prints "linux"
(true  && false && true) to_s.say;          # prints "false"
(false && "perl" || "sidef") say;           # prints "sidef"

''say;

({false; true}.run && ("&& block")) say;       # prints "&& block"
({true; false}.run || ("|| block")) say;       # prints "|| block"

''say;

{false; true}.run ? "one" : "zero" -> say;  # prints "one"
{true; false}.run ? "one" : "zero" -> say;  # prints "zero"


