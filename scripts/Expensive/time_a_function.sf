#!/usr/bin/ruby

var benchmark = require('Benchmark').();

func fac(n) {
    n == 0 ? 1 : (n * __FUNC__(n - 1))
}

func fac_mem(n) {
    static memo = [];
    memo[n] := (n == 0 ? 1 : (n * __FUNC__(n - 1)));
}

var result = benchmark.timethese(-3, :(
    'fac'     => func {    fac(10)},
    'fac mem' => func {fac_mem(10)},
));

benchmark.cmpthese(result);
