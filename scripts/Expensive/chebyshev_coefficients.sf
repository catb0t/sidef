#!/usr/bin/ruby

#
## http://rosettacode.org/wiki/Chebyshev_coefficients#Sidef
#

func chebft (callback, a, b, n) {

    var bma = (0.5 * b-a);
    var bpa = (0.5 * b+a);

    var pi_n = ((0..(n-1) »+» 0.5) »*» (Math::PI / n));
    var f = (pi_n »cos»() »*» bma »+» bpa -> map {callback(_)});
    var sums = (0..(n-1) -> map {|i| f »*« ((pi_n »*» i) »cos»()) «+» });

    sums »*» (2/n);
}

chebft(func(v){v.cos}, 0, 1, 10).each { |v|
    say ("%+.10e" % v);
};
