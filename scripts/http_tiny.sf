#!/usr/bin/ruby

var req = require 'HTTP::Tiny';
var http = req.new;

var response = http.get('http://example.com/');
if (!response[:success]) {
    "GET failed!\n".die;
}

say "#{response[:status]} #{response[:reason]}";

response[:headers].each { |k,v|
    say "#{k}: #{v}";
}

response[:content].len? && response[:content].len.to_s.say;
