#!/usr/bin/perl

var i;
{
    var bottles  = ('%s bottle%s'.sprintf(i==0?{'No'}:{i}, i==1?{''}:{'s'}));
    var sentence = ('%s of beer on the wall'.sprintf(bottles));

    {
        sentence.say;
        sentence.substr(0, bottles.length + 8)->say;
        "Take one down, pass it around\n"->say;
    }
    if (i!=0)
    else {
        sentence.say;
    };

} for {i = 99; i >= 0; i--};
